<Window
    x:Class="WellPt.Window_Notification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WellPt"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Window2"
    Width="317.333"
    Height="186"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Storyboard x:Key="WindowOn" TargetProperty="Opacity">
            <StaticResourceExtension ResourceKey="App_FadeIn" />
        </Storyboard>
        <Storyboard x:Key="WindowOff" TargetProperty="Opacity">
            <StaticResourceExtension ResourceKey="App_FadeOut" />
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Rectangle
            Width="297"
            Height="166"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#FFF4F4F5"
            RadiusX="10"
            RadiusY="10" />
        <Button
            x:Name="Bt"
            Width="89"
            Margin="112,127,116.333,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="Got you!" />
    </Grid>
</Window>
