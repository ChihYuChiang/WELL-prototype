<Window
    x:Class="WellPt.Window_Notification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WellPt"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Window2"
    Width="200"
    Height="120"
    WindowStyle="None"
    ResizeMode="NoResize"
    mc:Ignorable="d"
    AllowsTransparency="True">
    <Window.Resources>
        <Storyboard x:Key="WindowOn" TargetProperty="Opacity">
            <StaticResourceExtension ResourceKey="App_FadeIn"/>
        </Storyboard>
        <Storyboard x:Key="WindowOff" TargetProperty="Opacity">
            <StaticResourceExtension ResourceKey="App_FadeOut"/>
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Button
            Name="Bt"
            Width="89"
            Margin="0,70,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="Got you!" />
    </Grid>
</Window>
